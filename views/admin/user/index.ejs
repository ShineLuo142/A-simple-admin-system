<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
    <script src="/"></script>
</head>
<body>


<!--公共头部开始-->
    <%include ../public/header.ejs%>
<!--公共头部结束-->

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">

                <%include ../public/aside.ejs%>

        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">用户管理
                </li>
                <li class="active">用户列表
                </li>
            </ol>
            <a href="/admin/user/add" class="btn btn-primary" style="margin-bottom: 20px">增加用户</a>

            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
                列表展示
            -->
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th  class="text-center">头像</th>
                            <th  class="text-center">姓名</th>
                            <th  class="text-center">年龄</th>
                            <th  class="text-center">性别</th>
                            <th  class="text-center">班级</th>
                            <th  class="text-center">操作</th>
                        </tr>
                    </thead>
                    <tbody>

                        <%for(var i=0;i<list.length;i++){%>

                        <tr>
                            <td><img src="/<%=list[i].face%>" style="height: 20px;"/></td>
                            <td><%=list[i].name%></td>

                            <td><%=list[i].age%></td>
                            <td>
                                <%if(list[i].sex=='1'){%>
                                男
                                <%}else{%>
                                女
                                <%}%>
                            </td>
                            <td><%=list[i].classname%></td>
                            <td><a href="/admin/user/edit?id=<%=list[i]._id%>">编辑</a>　　<a href="/admin/user/delate?id=<%=list[i]._id%>">删除</a></td>
                        </tr>

                        <%}%>


                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

</body>
</html>