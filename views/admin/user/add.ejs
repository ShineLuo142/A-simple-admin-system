<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%include ../public/aside.ejs%>

        </div>
        <div class="col-sm-10">

            <div class="panel panel-default">

                <div class="panel-heading">
                    增加用户
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/user/doAdd" method="post" enctype="multipart/form-data">
                            <ul>
                                <li>  用户名: <input type="text" name="name"/></li>

                                <li>  头像: <input type="file" name="face"/></li>

                                <li>  年　龄: <input type="text" name="age"/></li>
                                <li>  性　别:  男 <input type="radio" name="sex" checked value="1" /> 　女 <input type="radio" name="sex" value="2" /></li>
                                <li>  班　级: <input type="text" name="classname"/></li>

                                <li>
                                    介　绍:
                                    <textarea name="description" id="" cols="60" rows="8"></textarea>
                                </li>

                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
